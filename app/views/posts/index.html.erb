<div class="user-box">
  <a href="<%= user_path(@user) %>">      
    <%= render partial: 'shared/user_photo', locals: { user: @user } %>
    <%= render partial: 'shared/user_details', locals: { user: @user } %>
  </a>
</div>

<% @posts.each do |post| %>
  <a href="<%= user_post_path(@user, post) %>">
    <div class="user-post">
      <div class="each-post">
        <h3><%= post.title %></h3>
        <p><%= post.text %></p>
        <div class="post-comments-likes">
          <span>Comments: <%= post.comments_counter %>, </span>
          <span>Likes: <%= post.likes_counter %></span>
        </div>
      </div>
      <div class="comment-box">
        <% post.recent_five.each do |comment| %>
          <div class="each-commet">
            <span><%= comment.author.name %>: </span>
            <span><%= comment.text %></span>
          </div>
        <% end %>
      </div>
    </div>
  </a>
<% end %>

<a href="<%= new_user_post_path(@user, @post) %>" class="see-all-posts">
  <button>Create a New Post</button>
</a>
<section id="pagination">
  <button>Pagination</button>
</section>
<a href="<%= user_path(@user) %>">
  Go back
</a>